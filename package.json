{
  "name": "nitro-deploys",
  "private": true,
  "scripts": {
    "build": "nitropack build",
    "dev": "nitropack dev",
    "lint": "eslint . && prettier -c .",
    "lint:fix": "eslint --fix . && prettier -w -c .",
    "dev:prepare": "nitropack prepare",
    "readme": "automd && pnpm lint:fix",
    "test": "pnpm lint && test:deployments",
    "test:deployments": "jiti ./test/tests.ts",
    "test:dev": "NODE_ENV=development jiti ./test/tests.ts"
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "automd": "^0.4.0",
    "eslint-config-unjs": "^0.4.2",
    "jiti": "^2.4.2",
    "nitropack": "npm:nitropack-nightly@2.11.0-20250303-182215.2462148f",
    "prettier": "^3.5.3"
  },
  "packageManager": "pnpm@10.5.2",
  "engines": {
    "node": ">=20.18.1"
  }
}
